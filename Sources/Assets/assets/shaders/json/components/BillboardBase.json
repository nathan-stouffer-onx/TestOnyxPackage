        "position": "Main",
        "positionOffset": 1,
        "type": "Vertex",
        "conditional" : {
            "ifBoolTrue": "TransformPosition"
        }
    },
    {
        "lines": [  "vec2 pos = mul(u_proj, mul(viewMat, vec4(position.xy, 0, 1))).xy; // Preserve Z as depth",
                    "gl_Position = vec4(pos.xy, position.z, 1);"
        ],
        "position": "Compose",
        "positionOffset": 1,
        "type": "Vertex",
        "conditional" : {
            "ifBoolTrue": "TransformPosition"
        }
    },

    {
        "data": "normal = mul(u_model[0], vec4(normal.xy, 0.0, 0.0) );",
        "position": "Main",
        "type": "Vertex",
        "conditional" : {
            "ifBoolTrue": "Normal"
        }
    },
    {
        "data": "v_normal = normal.xyz;",
        "position": "Compose",
        "type": "Vertex",
        "conditional" : {
            "ifBoolTrue": "Normal"
        }
    },
    {
        "data": "tangent = mul(u_model[0], vec4(tangent.xy, 0.0, 0.0) );",
        "position": "Main",
        "type": "Vertex",
        "conditional" : {
            "ifBoolTrue": "Tangent"
        }
    },
    {
        "lines":[
            "v_tangent = tangent;",
            "v_bitangent = cross(v_normal, v_tangent);"
        ],
        "position": "Compose",
        "type": "Vertex",
        "conditional" : {
            "ifBoolTrue": "Tangent"
        }
    },

    {
        "data": "vec4 fragColor = vec4(0,0,0,0);",
        "position": "Main",
        "type": "Pixel"
    },
    {
        "data": "gl_FragColor = fragColor;",
        "position": "Compose",
        "type": "Pixel"
    }
],

